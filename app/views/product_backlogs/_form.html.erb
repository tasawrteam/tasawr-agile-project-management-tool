<dl>
  <dt><%= f.label :name %></dt>
  <dd>
    <%= f.text_field :name %>
    <%= f.error_message_on :name %>
  </dd>
</dl>

<dl>
  <dt><%= f.label :icon_path %></dt>
  <dd><%= f.text_field :icon_path %></dd>
</dl>

<dl>
  <dt><%= f.label :product_id %></dt>
  <dd>
    <%= f.select :product_id, @products.collect{|p| [p.name, p.id]}%>
    <%= f.error_message_on :product_id %>
  </dd>
</dl>

<dl>
  <dt><%= f.label :description %></dt>
  <dd><%= f.text_area :description %></dd>
</dl>